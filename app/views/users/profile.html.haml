.background
  = render "shared/exhibit-btn"
  = render "shared/header"

  .mypage-wrapper
    .profile
      .profile-head
        プロフィール
      %form{action: "", method: "POST", class: "profile-form"}
        .profile-form__icon
          .profile-form__icon-figure
            = image_tag "https://static.mercdn.net/images/member_photo_noimage_thumb.png", class: "profile-image"
          %input{type: "string", name: "nickname", placeholder: "例)ニックネーム", class: "profile-textarea"}
        .profile-text
          %textarea.profile-text__textarea{name: "introduction", placeholder: "例)こんにちは⭐︎ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に９号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪"}
          %button.profile-text__submit-btn{type: "submit"}変更する

    = render "shared/mypage-nav"

